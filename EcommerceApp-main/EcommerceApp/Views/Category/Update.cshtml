@using EcommerceApp.DTO
@model CategoryDTO

<div class="container mt-5">
    <form method="post" asp-action="Update" asp-route-id="@ViewBag.CategoryId" asp-controller="Category">
        <h2>Edição de Categoria</h2>

        <div class="md-1">
            <label class="form-label">Nome da Categoria:</label>
            <input type="text" asp-for="Name" class="form-control shadow-none" />
        </div>
        <div class="md-1">
            <label class="form-label">Descrição da Categoria</label>
            <textarea type="text" asp-for="Description" class="form-control shadow-none"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="btn-box d-flex mt-3">
            <button type="submit" type="button" class="btn btn-success w-50 mx-1" "><i class="bi bi-plus-circle"></i>Editar</button>
            <a type="submit" class="btn btn-info w-50" asp-controller="Category" asp-action="Index"><i class="bi bi-arrow-left-circle"></i>Voltar</a>
        </div>
    </form>
</div>
